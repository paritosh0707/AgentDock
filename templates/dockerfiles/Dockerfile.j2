# ============================================================================
# Dockrion Agent Runtime - Docker Image
# ============================================================================
# Agent: {{ agent.name }}
# Framework: {{ agent.framework }}
# Generated by Dockrion SDK
# ============================================================================

# -----------------------------------------------------------------------------
# Build Arguments
# -----------------------------------------------------------------------------
ARG PYTHON_VERSION={{ python_version | default('3.12') }}
ARG UV_VERSION={{ uv_version | default('latest') }}

# -----------------------------------------------------------------------------
# Base Image
# -----------------------------------------------------------------------------
FROM python:${PYTHON_VERSION}-slim AS base

# Labels for container metadata
LABEL org.opencontainers.image.title="{{ agent.name }}"
LABEL org.opencontainers.image.description="{{ agent.description | default('Dockrion Agent') }}"
LABEL org.opencontainers.image.vendor="Dockrion"
LABEL org.opencontainers.image.version="{{ metadata.version | default('1.0.0') if metadata else '1.0.0' }}"
{%- if metadata and metadata.maintainer %}
LABEL org.opencontainers.image.authors="{{ metadata.maintainer }}"
{%- endif %}

# Environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONFAULTHANDLER=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# -----------------------------------------------------------------------------
# Builder Stage - Install dependencies
# -----------------------------------------------------------------------------
FROM base AS builder

WORKDIR /build

# Install system dependencies and uv package manager
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    && curl -LsSf https://astral.sh/uv/install.sh | sh \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Add uv to PATH
ENV PATH="/root/.local/bin:$PATH"

# Copy requirements first (for better caching)
COPY .dockrion_runtime/requirements.txt /build/requirements.txt

# Install Python dependencies
RUN uv pip install --system --no-cache -r /build/requirements.txt

# Copy and install Dockrion packages
COPY packages/common-py/ /dockrion_packages/common-py/
COPY packages/schema/ /dockrion_packages/schema/
COPY packages/adapters/ /dockrion_packages/adapters/

RUN uv pip install --system --no-cache \
    -e /dockrion_packages/common-py \
    -e /dockrion_packages/schema \
    -e /dockrion_packages/adapters

# -----------------------------------------------------------------------------
# Runtime Stage - Minimal production image
# -----------------------------------------------------------------------------
FROM base AS runtime

WORKDIR /app

# Create non-root user for security
RUN groupadd --gid 1000 dockrion \
    && useradd --uid 1000 --gid dockrion --shell /bin/bash --create-home dockrion

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python{{ python_version | default('3.12') | regex_replace('\\.[0-9]+$', '') }}/site-packages /usr/local/lib/python{{ python_version | default('3.12') | regex_replace('\\.[0-9]+$', '') }}/site-packages
COPY --from=builder /dockrion_packages /dockrion_packages

{%- if agent_directories %}
# Copy agent code directories
{%- for dir in agent_directories %}
COPY {{ dir }}/ /app/{{ dir }}/
{%- endfor %}
{%- else %}
# Copy agent code (auto-detected from entrypoint)
{%- set module_parts = agent.entrypoint.split(':')[0].split('.') %}
{%- set agent_dir = module_parts[0] %}
COPY {{ agent_dir }}/ /app/{{ agent_dir }}/
{%- endif %}

# Copy Dockfile for runtime reference
COPY Dockfile.yaml /app/Dockfile.yaml

# Copy generated runtime
COPY .dockrion_runtime/main.py /app/main.py

# Set ownership
RUN chown -R dockrion:dockrion /app

# Switch to non-root user
USER dockrion

# Expose port
{%- if expose %}
EXPOSE {{ expose.port | default(8080) }}
{%- else %}
EXPOSE 8080
{%- endif %}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:{{ expose.port | default(8080) if expose else 8080 }}/health')" || exit 1

# Environment variables for runtime
{%- if model %}
ENV MODEL_PROVIDER="{{ model.provider | default('openai') }}" \
    MODEL_NAME="{{ model.name | default('gpt-4o-mini') }}"
{%- endif %}

{%- if auth and auth.mode == 'api_key' %}
# Auth is enabled - API key must be provided at runtime
ENV DOCKRION_AUTH_ENABLED="true"
{%- endif %}

# Default command
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "{{ expose.port | default(8080) if expose else 8080 }}"]

# -----------------------------------------------------------------------------
# Development Stage (optional - for local development with hot reload)
# -----------------------------------------------------------------------------
FROM runtime AS development

USER root

# Install development dependencies
RUN pip install --no-cache-dir watchfiles

USER dockrion

# Hot reload command for development
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "{{ expose.port | default(8080) if expose else 8080 }}", "--reload"]

